@using System.Globalization
@model Product
<div class="form-group">
    <label asp-for="Name"></label>
    <input class="form-control" asp-for="Name" type="text" readonly />
</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input class="form-control" id="price" type="text" readonly value='@(string.Format(new CultureInfo("fr-MA"), "{0:c}", @Model.Price))' />
</div>